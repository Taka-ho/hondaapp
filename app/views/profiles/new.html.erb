<div>
<%= form_with model: @profile, local: true do |f| %>
    <h1>プロフィールを登録する</h1>
    <div class="form-group">
        <%= f.label :name,'名前' %>
        <%= f.text_field :name %>
    </div>
  <div class="form-group">
    <%= f.label :leaning_histry,'趣味歴' %>
    <%= f.number_field :leaning_histry %>
  </div>
  <div class="form-group">
    <%= f.label :purpose, '楽しいところ' %>
    <%= f.text_field :purpose %>

  </div>
  <div class="form-group">
    <%= f.label :image,'ユーザー画像' %>
    <%= f.file_field :image%>
</div>

        <div class = 'submit-block'>
    <%= f.submit 'プロフィール登録', class:"button" %>
    </div>
    <% end %>
    </div>
