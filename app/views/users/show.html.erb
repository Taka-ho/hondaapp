<div class= 'user-profile'>
    <div class="content">
        <div class="user-about">
                    <div class="image">
                    <% if @user.image.attached? %>
                    <%= image_tag @user.image %>
                       <% else %>
                   <%= image_tag 'no.user.png' %>
                       <% end %>
                    </div>
                    <div class="profile">
                          <div class="name-history">
                                <div class="name">
                                    <%= @user.nickname %>
                                </div>
                           <div class="mania-histry">
                                <%= "趣味歴:#{@user.mania_histry}年" %>
                             </div>
                        </div>
    
                            <div class="enjoy-point">
                                <%= "楽しいポイント#{@user.enjoy_point}"%>
                            </div>

                    </div>
                    <% @user.movies.each do |user| %>
                        <div class="text">
                        <h2><%= truncate(user.movie.title, length:15) %></h2><%= link_to "コメントor続きをよむ", "/movies/#{movie.id}" %>
                        <h3><%= truncate(user.movie.introduction, length:15) %></h3>
                       <video src=<%= rails_blob_path(user.movie.movie) %> ,type='movie/mp4 movie/mov', controls>
               </div>
                 <% end %>
                 <% @user.posts.each do |user| %>
                    <div class="text">
                    <h2><%= truncate(user.post.content, length:15) %></h2><%= link_to "コメントor続きをよむ", "/posts/#{post.id}" %>
                </div>
                    <% if user.post.images.attached? %>
                        <% user.post.images.each do |user| %>
                            <div class = 'images'>
                                <%= image_tag image.variant(resize: "1280x720"), class: "content-image" %>
                            </div>
                        <% end %>
                    <% end %>
                    <% end %>
                    <% @user.blogs.each do |user| %>
                        <div class="text">
            <div class="title">
                <h3>タイトル: <%= blog.title %></h3>
            </div>
       <h2><%= truncate(strip_tags(blog.body.to_s),length: 14) %></h2></h2><%= link_to "コメントor続きをよむ", "/blogs/#{blog.id}" %>
  </div>
                    <% end %>



            </div>
        </div>
    </div>
</div>