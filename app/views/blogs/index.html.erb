
<div class="content-wrapper">
  <div class="content-block">
      <% @blogs.each do |blog| %>
      <div class="content">
       <div class="user-about">
           <div class="image">
           <% if blog.user.image.attached? %>
           <%= image_tag blog.user.image %>
              <% else %>
          <%= image_tag 'no.user.png' %>
              <% end %>
           </div>

       <div class="profile">
          <div class="name-history">
              <div class="name">

              <%= blog.user.nickname %>


              </div>
              <div class="mania-histry">
                  <%= "趣味歴:#{blog.user.mania_histry}年" %>
              </div>
           </div>
           
           <div class="enjoy-point">
           <%= "楽しいポイント#{blog.user.enjoy_point}"%>
           </div>
       </div>
     </div>
     
     <div class="text">
       <div class="title">
        <p>タイトル: <%= blog.title %></p>
       </div>
      <p><%= blog.body %>...<%= link_to "詳しく見る or コメント", "/blogs/#{blog.id}" %></p>
  </div>

       <div class="action-menu">
       <div id="blog_<%= blog.id %>">
       <%= render 'blog', blog: blog %>
      </div>
           <div class="comment">
            </div>
           <%if user_signed_in?%>
            <div class = 'user-action'>
                  <% if current_user.id == blog.user.id %>
                      <%= link_to "編集", edit_blog_path(blog) %>
                      <%= link_to "削除", blog_path(blog), method: :delete %>
                  <% end %>
              <% end %>
          </div>
       </div>

      </div>
      <% end %>


  </div>
  <div class="sidebar">
  <%= render 'shared/menu'%>

  </div>
</div>