<div class="content">
<div class="user-about">
    <div class="image">
    <% if @blog.user.image.attached? %>
    <%= image_tag @blog.user.image %>
       <% else %>
   <%= image_tag 'no.user.png' %>
       <% end %>
    </div>

<div class="profile">
   <div class="name-history">
       <div class="name">

       <%= @blog.user.nickname %>


       </div>
       <div class="mania-histry">
           <%= "趣味歴:#{@blog.user.mania_histry}年" %>
       </div>
    </div>
    
    <div class="enjoy-point">
    <%= "楽しいポイント#{@blog.user.enjoy_point}"%>
    </div>
</div>
</div>

<div class="text">
<p><%= @blog.body %></p>
</div>

<div class="action-menu">
  <% if user_signed_in? %>
    <div class="like">
      <div id="blog_<%= @blog.id %>">
      <%= render @blog, blog: @blog %>
     </div>
      <div class="comment">
        <%if user_signed_in?%>
        <%= form_for [@blog, @blog_comment] do |f| %>
            <%= f.text_area :blog_comment, size: "40x2" %>
            <%= f.submit '送信', class: "btn-sm btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% @blog_comments.each do |blog_comment| %>
    <div class="comment-user">
      <tr>
        <td><%= blog_comment.user.nickname %>:</td>
        <td><%= blog_comment.comment %></td>
        <td><%= link_to "削除", blog_comment_path(@blog, blog_comment), method: :delete %></td>
      </tr>
    </div>
  <% end %>
</div>
    
    </div>
</div>

</div>
