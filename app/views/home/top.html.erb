<div class="content-wrapper">
    <div class="content-block">
        <% @posts.each do |post| %>
        <div class="content">
         <div class="user-about">
             <div class="image">
             <% if current_user.image.attached? %>
                <%= image_tag current_user.image %>
            <% else %>
            <%= image_tag no.user.png %>
                <% end %>
             </div>
         
         <div class="profile">
            <div class="name-history">
                <div class="name">
                <%= current_user.name%>
                </div>
                <div class="mania-histry">
                    <%= "学習歴:#{current_user.mania_histry}年" %>
                </div>
             </div>
             
             <div class="enjoy-point">
             <%= "楽しいポイント#{current_user.enjoy_point}"%>
             </div>
         </div>
       </div>
       
       <div class="text">
        <p><%= post.content %></p>
    </div>
   
    <% if post.images.attached? %>
    <% post.images.each do |image| %>
    <div class = 'images'>
    <%= image_tag image %>
    </div>
    <% end %>
    <% end %>

         <div class="action-menu">
             <div class="like">

             </div>
             <div class="comment">
                 
             </div>
         </div>

        </div>
        <% end %>

    </div>
    <div class="sidebar">
     <div class="box">

     </div>
     <div class="box">
         
    </div>
    </div>
</div>